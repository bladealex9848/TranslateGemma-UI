# TranslateGemma-UI Environment Configuration
# Copy this file to .env and modify as needed

# =================================================================
# OLLAMA SERVER CONFIGURATION
# =================================================================

# Ollama server host URL
# Default: http://localhost:11434
OLLAMA_HOST=http://localhost:11434

# Default TranslateGemma model to use
# Options: translategemma:4b, translategemma:12b, translategemma:27b
# Recommended: translategemma:12b (balanced performance/quality)
OLLAMA_MODEL=translategemma:12b

# Request timeout in seconds
OLLAMA_TIMEOUT=120

# =================================================================
# APPLICATION SETTINGS
# =================================================================

# Application port (if running backend)
APP_PORT=3000

# Application host
APP_HOST=0.0.0.0

# Public URL for the application
APP_PUBLIC_URL=https://translate.alexanderoviedofadul.dev

# Enable debug mode (true/false)
DEBUG=false

# =================================================================
# CORS SETTINGS (if running backend)
# =================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =================================================================
# STORAGE
# =================================================================

# History storage path (local)
HISTORY_PATH=./data/history

# Maximum history entries to keep
MAX_HISTORY_ENTRIES=1000
